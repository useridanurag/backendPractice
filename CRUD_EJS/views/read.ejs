<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Document</title>

</head>

<body>
  <div class="w-full min-h-full bg-zinc-900 text-white p-10">
    <a class="text-blue-500" href="/">Go back to home</a>
    <h1 class="my-4 tracking-tight text-4xl">All Users</h1>
    <div class="users flex flex-wrap gap-3">
      <% if(users.length > 0){ %>
        <% users.forEach((user)=>{ %>
          <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
              <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="userImage">
              ale
            </div>
            <h3 class="text-xl mt-3 tracking-tighter">
              <%= user.name%>
            </h3>
            <h5 class="text-zinc-500">
              <%= user.email%>
            </h5>
            <div class="flex gap-3 mt-10">
              <a class="text-orange-500" href="/edit/<%= user._id%>">Edit User</a>
              <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
            </div>
          </div>
          <% }) %>
        <% } else{%>
          <h3 class="text-4xl pt-20 text-zinc-500">No any user yet...</h3>
          <%  }%>

      

    </div>
  </div>
</body>

</html>